{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "buildMuduo",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-O2",
                "-std=c++14",
                "${file}", // 当前文件
                // "${workspaceFolder}/src/*.cpp",      
                "-o",
                "${workspaceFolder}/build/bin/${fileBasenameNoExtension}",        // ${fileBasenameNoExtension}：表示当前文件名（不包含扩展名）
                "-I${workspaceFolder}/include/",                        // -I：指定头文件所在目录
                "-I${workspaceFolder}/Tests/include",                   // 指定gtest头文件路径
                "-L${workspaceFolder}/Tests/include/lib",               // 指定gtest动态库路径
                "-L${workspaceFolder}/build/lib",                       // 指定自己的动态库路径
                "-lgtest",                                              // 指定连接的动态库名称gtest
                "-lgtest_main",                                         // 指定连接的动态库名称gtest_main
                "-lcppmuduo",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}